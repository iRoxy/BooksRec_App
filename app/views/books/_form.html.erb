<%= render 'shared/errors', obj: @book %>

<div class="row">
    <div class="col-xs-12">
    <%=form_for(@book, :html => { class: "form-horizontal", role: "form"}) do |b| %>
    <div class="form-group">
        <div class="control-label col-sm-2">
            <%= b.label :title %>
        </div>
        <div class="col-sm-8">
            <%= b.text_field :title, class: "form-control", placeholder: "Title of Book", autofocus: true %>
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-sm-2">
            <%= b.label :author %>
        </div>
        <div class="col-sm-8">
            <%= b.text_field :author, class: "form-control", placeholder: "Author of Book" %>
        </div>
    </div>
            
    <div class="form-group">
        <div class="control-label col-sm-2">
            <%= b.label :genre %>
        </div>
        <div class="col-sm-8">
            <%= b.text_field :genre, class: "form-control", placeholder: "Genre of Book" %>
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-sm-2">
            <%= b.label :description %>
        </div>
        <div class="col-sm-8">
            <%= b.text_area :description, rows: 10, class: "form-control", placeholder: "Description of Book" %>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10 ">
            <%= b.submit class: 'btn btn-primary btn-lg' %>
        </div>
    </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4" align="center">
       [ <%= link_to 'Cancel', books_path %> ]
    </div>
    </div>
</div>