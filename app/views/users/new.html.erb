<h1 align="center">Signup for Books Rec</h1>

<%= render 'shared/errors', obj: @user %>

<div class="row">
    <div class="col-xs-12">
    <%=form_for(@user, :html => { class: "form-horizontal", role: "form"}) do |b| %>
    <div class="form-group">
        <div class="control-label col-sm-2">
            <%= b.label :username %>
        </div>
        <div class="col-sm-8">
            <%= b.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
        </div>
    </div>

    <div class="form-group">
        <div class="control-label col-sm-2">
            <%= b.label :email %>
        </div>
        <div class="col-sm-8">
            <%= b.email_field :email, class: "form-control", placeholder: "Enter email" %>
        </div>
    </div>
            
    <div class="form-group">
        <div class="control-label col-sm-2">
            <%= b.label :password %>
        </div>
        <div class="col-sm-8">
            <%= b.password_field :password, class: "form-control", placeholder: "Enter password" %>
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10 ">
            <%= b.submit "Sign up", class: 'btn btn-primary btn-lg' %>
        </div>
    </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-4" align="center">
       [ <%= link_to 'Cancel', books_path %> ]
    </div>
    </div>
</div>